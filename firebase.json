{
  "hosting": {
    "site": "securityerp",
    "public": "react-chat/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/socket.io/**",
        "run": {
          "serviceId": "chat-backend",
          "region": "us-central1"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
  